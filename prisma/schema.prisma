generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enums para el sistema
enum UserRole {
  ADMIN
  STAFF
  CLIENTE
}

enum ProductGender {
  HOMBRE
  MUJER
  NIÑO
  UNISEX
}

enum OrderStatus {
  PENDIENTE
  PREPARANDO
  ENVIADO
  ENTREGADO
  CANCELADO
}

enum PaymentStatus {
  PENDIENTE
  PAGADO
  FALLIDO
  REEMBOLSADO
}

enum PaymentMethod {
  TARJETA_CREDITO
  TARJETA_DEBITO
  TRANSFERENCIA
  MERCADO_PAGO
  EFECTIVO
}

// Modelo de Usuario para autenticación
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Contraseña hasheada
  name      String
  role      UserRole? @default(CLIENTE)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  orders        Order[]
  orderHistories OrderHistory[]

  @@map("users")
}

// Categorías con jerarquía
model Category {
  id           String    @id @default(cuid())
  name         String    @unique
  description  String?
  position     Int       @default(0)
  isActive     Boolean   @default(true)
  parentId     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relaciones
  parent     Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children   Category[] @relation("CategoryHierarchy")
  products   Product[]

  @@unique([name, parentId])
  @@index([parentId])
  @@map("categories")
}

// Productos principales
model Product {
  id          String        @id @default(cuid())
  name        String
  description String?
  sku         String?       @unique
  price       Decimal       @db.Decimal(10, 2)
  brandName   String        // Nombre de la marca como string simple
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

 // Relaciones
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  options    ProductOption[]
  stocks     Stock[]

  @@map("products")
}

// Opciones de producto (variantes como talla, color, material)
model ProductOption {
  id       String @id @default(cuid())
  size     String // Ej: "40", "41", "42"
  color    String // Ej: "Negro", "Blanco", "Rojo"
  material String? // Ej: "Cuero", "Sintético", "Textil"
  sku      String? @unique
  stock    Int    @default(0) // Cantidad en stock
  minStock Int    @default(5) // Stock mínimo para alerta
  isActive Boolean @default(true)

  // Relaciones
  productId String
  product   Product @relation(fields: [productId], references: [id])
  stocks    Stock[]
  orderItems OrderItem[]

  @@map("product_options")
}

// Inventario de productos
model Stock {
  id        String   @id @default(cuid())
  quantity  Int      @default(0)
  minStock  Int      @default(5) // Stock mínimo para alerta
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  productId        String
  product          Product @relation(fields: [productId], references: [id])
  productOptionId  String
  productOption    ProductOption @relation(fields: [productOptionId], references: [id])

  @@unique([productId, productOptionId])
  @@map("stocks")
}

// Órdenes de compra - Versión Simplificada para Prueba Técnica
model Order {
  id             String        @id @default(cuid())
  orderNumber    String        @unique // Número de orden único alfanumérico
  total          Decimal       @db.Decimal(10, 2)
  status         OrderStatus   @default(PENDIENTE)
  paymentMethod  String        // Método de pago (efectivo, tarjeta, etc.)
  notes          String?       // Notas de la venta
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relaciones (opcionales para ventas rápidas)
  userId         String?       // Cliente opcional
  user           User?         @relation(fields: [userId], references: [id])
  items          OrderItem[]
  histories      OrderHistory[]

  @@map("orders")
}

// Ítems de una orden - Versión Simplificada
model OrderItem {
  id       String   @id @default(cuid())
  quantity Int
  price    Decimal  @db.Decimal(10, 2) // Precio al momento de la compra
  createdAt DateTime @default(now())

  // Relaciones
  orderId         String
  order           Order @relation(fields: [orderId], references: [id])
  productOptionId String
  productOption   ProductOption @relation(fields: [productOptionId], references: [id])

  @@map("order_items")
}

// Historial de cambios en las órdenes
model OrderHistory {
  id        String   @id @default(cuid())
  status    OrderStatus
  notes     String?
  createdAt DateTime @default(now())

  // Relaciones
  orderId String
  order   Order @relation(fields: [orderId], references: [id])
  adminId String
  admin   User  @relation(fields: [adminId], references: [id])

  @@map("order_histories")
}
